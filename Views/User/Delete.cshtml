@model FloralHaven.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-6 row-gap-4">
        <div class="d-flex flex-column justify-content-center">
            <h4 class="mb-1">Delete User</h4>
            <p class="mb-0">User #@Model.Id</p>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-4">
            <div class="d-flex gap-4">
                <a class="btn btn-label-secondary" href="@Url.Action("UserList","User")">Back</a>
            </div>
            @using (Html.BeginForm("Delete", "User", new { id = Model.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Delete</button>
            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12">
            <div class="card mb-6">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 card-title">User Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="form-label col-4 col-lg-3">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-8 col-lg-9">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="form-label col-4 col-lg-3">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-8 col-lg-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="form-label col-4 col-lg-3">
                            @Html.DisplayNameFor(model => model.FirstName)
                        </dt>
                        <dd class="col-8 col-lg-9">
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>
                        <dt class="form-label col-4 col-lg-3">
                            @Html.DisplayNameFor(model => model.LastName)
                        </dt>
                        <dd class="col-8 col-lg-9">
                            @Html.DisplayFor(model => model.LastName)
                        </dd>
                        <dt class="form-label col-4 col-lg-3">
                            @Html.DisplayNameFor(model => model.Avatar)
                        </dt>
                        <dd class="col-8 col-lg-9">
                            <img src="@Model.Avatar" alt="Avatar" loading="lazy" />
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>