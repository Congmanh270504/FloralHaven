@using Microsoft.AspNet.Identity
@using FloralHaven.Helpers

<div class="account-block mt-16">
    @if (Request.IsAuthenticated)
    {
        var currentUser = UserHelper.GetCurrentUser();
        <div class="block xl:hidden mb-16 p-4">
            <div class="font-medium text-xl mb-6">My Account</div>
            <a href="@Url.Action("Index", "Manage")" class="w-full py-3 mb-3 rounded-md flex items-center">
                <div class="flex flex-grow">
                    <svg class="w-[24px] h-[24px]" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                        <path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z"></path>
                    </svg>
                    <span class="ml-2">@currentUser.FirstName</span>
                </div>
            </a>
            @using (Html.BeginForm("LogOff","Account",FormMethod.Post)) { 
            <button class="w-full text-center btn-logout rounded-md border border-black whitespace-nowrap" type="submit">
                Log Out
                @*<a href="${currentPath}/logout" class="block p-3">Log Out</a>*@
            </button>
            }

        </div>
    }

    else
    {
        <div class="block xl:hidden mb-16 p-4">
            <div class="font-medium text-xl mb-6">My Account</div>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary mb-3 my-account-btn w-full signin">LOG IN</a>
            <a href="@Url.Action("Register", "Account")" class="btn btn-link my-account-btn register">Register</a>
        </div>
    }
</div>
