<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="" name="keywords">
    <meta content="" name="description">
    <title>@ViewBag.Title</title>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link href="~/css/custombootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
    <!-- Favicon -->
    <link href="~/favicon.ico" rel="icon" />
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="container-fluid bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar & Hero Start -->
        <div class="container-fluid position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0">
                <a href="" class="navbar-brand p-0">
                    <h1 class="text-primary m-0">Floral Haven <img width="45" height="45" src="https://img.icons8.com/doodle/48/spa-flower.png" alt="spa-flower" /></h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    @{
                        var currentController = ViewContext.RouteData.Values["controller"] as string ?? "Home";
                        var currentAction = ViewContext.RouteData.Values["action"] as string ?? "Index";
                        var currentPage = (currentController + "-" + currentAction).ToLower();
                    }
                    <div class="navbar-nav ms-auto py-0 pe-4">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link" + (currentPage == "home-index" ? " active" : "") })
                        @Html.ActionLink("About", "About", "Pages", new { area = "" }, new { @class = "nav-item nav-link" + (currentPage == "pages-about" ? " active" : "") })
                        @Html.ActionLink("Service", "Service", "Pages", new { area = "" }, new { @class = "nav-item nav-link" + (currentPage == "pages-service" ? " active" : "") })

                        <div class="nav-item dropdown">
                            @if (currentPage == "pages-quick menu" || currentPage == "pages-all product")
                            {
                                <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Shop</a>
                            }
                            else
                            {
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Shop</a>
                            }
                            <div class="dropdown-menu m-0">
                                @Html.ActionLink("Quick Menu", "Menu", "Pages", new { area = "" }, new { @class = "dropdown-item" + (currentPage == "pages-booking" ? " active" : "") })
                                @Html.ActionLink("All Product", "Index", "Product", new { area = "" }, new { @class = "dropdown-item" + (currentPage == "pages-team" ? " active" : "") })
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            @if (currentPage == "pages-booking" || currentPage == "pages-team" || currentPage == "pages-testimonial")
                            {
                                <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Pages</a>
                            }
                            else
                            {
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            }
                            <div class="dropdown-menu m-0">
                                @Html.ActionLink("Booking", "Booking", "Pages", new { area = "" }, new { @class = "dropdown-item" + (currentPage == "pages-booking" ? " active" : "") })
                                @Html.ActionLink("Our Team", "Team", "Pages", new { area = "" }, new { @class = "dropdown-item" + (currentPage == "pages-team" ? " active" : "") })
                                @Html.ActionLink("Testimonial", "Testimonial", "Pages", new { area = "" }, new { @class = "dropdown-item" + (currentPage == "pages-testimonial" ? " active" : "") })
                            </div>
                        </div>
                        @Html.ActionLink("Contact", "Contact", "Pages", new { area = "" }, new { @class = "nav-item nav-link" + (currentPage == "pages-menu" ? " active" : "") })
                    </div>
                    @Html.ActionLink("Log In", "Login", "User", new { area = "" }, new { @class = "button-75" })
                </div>
            </nav>

            <div class="container-fluid py-5 bg-dark hero-header mb-5">
                @RenderSection("Hero", required: false)
            </div>
        </div>
        <!-- Navbar & Hero End -->
        <!-- Body Start -->
        @RenderBody()
        <!-- Body End -->
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Company</h4>
                        <a class="btn btn-link" asp-area="" asp-controller="pages" asp-action="about">About Us</a>
                        <a class="btn btn-link" asp-area="" asp-controller="pages" asp-action="contact">Contact Us</a>
                        <a class="btn btn-link" asp-area="" asp-controller="pages" asp-action="reservation">Reservation</a>
                        <a class="btn btn-link" asp-area="" asp-controller="pages" asp-action="privacy">Privacy Policy</a>
                        <a class="btn btn-link" asp-area="" asp-controller="pages" asp-action="terms">Terms & Condition</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Contact</h4>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>123 Street, New York, USA</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+012 345 67890</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@example.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Opening</h4>
                        <h5 class="text-light fw-normal">Monday - Saturday</h5>
                        <p>09AM - 09PM</p>
                        <h5 class="text-light fw-normal">Sunday</h5>
                        <p>10AM - 08PM</p>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Newsletter</h4>
                        <p>Đăng nhập ngay tại đây</p>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control border-primary w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                            <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" href="#">Floral Haven</a>, All Right Reserved.
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <div class="footer-menu">
                                <a href="">Home</a>
                                <a href="">Cookies</a>
                                <a href="">Help</a>
                                <a href="">FQAs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
