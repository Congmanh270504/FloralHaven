        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "customer_register", @class = "customer__form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "error-msg" })
            <div class="input-box">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "first-name", name = "customer[first_name]", @placeholder = Html.DisplayNameFor(m => m.FirstName), autocomplete = "given-name" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "error-msg" })
            </div>
            <div class="input-box">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "last-name", name = "customer[last_name]", @placeholder = Html.DisplayNameFor(m => m.LastName), autocomplete = "family-name" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "error-msg" })
            </div>
            <div class="input-box">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", name = "customer[email]", @placeholder = Html.DisplayNameFor(m => m.Email), autocomplete = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error-msg" })
            </div>
            <div class="input-box | relative">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control password", id = "password", name = "customer[password]", @placeholder = Html.DisplayNameFor(m => m.Password), autocomplete = "new-password" })
                <button class="icon-button show-pass" tabindex="0" type="button" aria-label=" Show Password">
                    <svg class="w-6 h-6 icon-button__icon" focusable="false" aria-hidden="true" viewBox="0 0 24 24">
                        <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5M12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5m0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3"></path>
                    </svg>
                </button>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-msg" })
            </div>
            <div class="input-box | relative">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control password", id = "comfirmpassword", name = "customer[comfirmpassword]", @placeholder = Html.DisplayNameFor(m => m.ConfirmPassword), autocomplete = "comfirm-pasword" })
                <button class="icon-button show-pass" tabindex="0" type="button" aria-label=" Show Password">
                    <svg class="w-6 h-6 icon-button__icon" focusable="false" aria-hidden="true" viewBox="0 0 24 24">
                        <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5M12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5m0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3"></path>
                    </svg>
                </button>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error-msg" })
            </div>
            <button class="btn btn-primary | mt-6 mb-3 w-full" type="submit">REGISTER</button>
        }
    </div>
    <a class="login-btn | btn-link mt-10 font-bold text-decoration-none" href="@Url.Action("Login","Account")">Login</a>
    <script>
        const showPassBtns = document.querySelectorAll(".show-pass");
        const passwordInputs = document.querySelectorAll(".password");
