@using FloralHaven.Models;
@{
    ViewBag.Title = "Menu - Floral Haven";
    List<PRODUCT> prod1 = ViewBag.bestSeller as List<PRODUCT>;
    List<string> img = ViewBag.img as List<string>;
}
<div class="row g-4">
    @foreach (var item in prod1)
    {
        int i = prod1.IndexOf(item);
        <div class="col-lg-6">
            <div class="d-flex align-items-center">
                <img class="flex-shrink-0 img-fluid rounded border" src="@img[i]" alt="" style="width: 80px;">
                <div class="w-100 d-flex flex-column text-start ps-4">
                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                        <span>@item.title</span>
                        <span class="text-primary">
                            @item.price.ToString("N0")
                            đ
                        </span>
                    </h5>
                    <small class="fst-italic">@item.CATEGORY.name</small>
                </div>
            </div>
        </div>
    }
</div>
