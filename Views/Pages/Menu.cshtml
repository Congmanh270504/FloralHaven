@using FloralHaven.Models;
@{
    ViewBag.Title = "Menu - Floral Haven";
    List<PRODUCT> prod1 = ViewBag.bestSeller as List<PRODUCT>;
    List<string> img = ViewBag.img as List<string>;
}
@section Hero {
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Flower Menu</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center text-uppercase">
                <li class="breadcrumb-item">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="breadcrumb-item">
                    @Html.ActionLink("Pages", "Index", "Pages")
                </li>
                <li class="breadcrumb-item text-white active" aria-current="page">Menu</li>
            </ol>
        </nav>
    </div>
}

<!-- Menu Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Quick Menu</h5>
            <h1 class="mb-5">Most Popular Items</h1>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill" href="#tab-1">
                        <img src="https://img.icons8.com/doodle/48/bunch-flowers.png" alt="bunch-flowers" />
                        <div class="ps-3">
                            <small class="text-body">Phổ biến </small>
                            <h6 class="mt-n1 mb-0">Bó hoa tươi</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 pb-3" data-bs-toggle="pill" href="#tab-2">
                        <img src="https://img.icons8.com/doodle/48/rose--v1.png" alt="rose--v1" />
                        <div class="ps-3">
                            <small class="text-body">20/10</small>
                            <h6 class="mt-n1 mb-0">Ngày nhà giáo </h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill" href="#tab-3">
                        <img  src="https://img.icons8.com/pulsar-color/48/spa-flower.png" alt="spa-flower" />
                        <div class="ps-3">
                            <small class="text-body">Đáng yêu</small>
                            <h6 class="mt-n1 mb-0">Tiết kiệm</h6>
                        </div>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    @Html.Action("PopularFl", "Pages")
                </div>
                <div id="tab-2" class="tab-pane fade show p-0">
                    @Html.Action("TeacherDay", "Pages")
                </div>
                <div id="tab-3" class="tab-pane fade show p-0">
                    @Html.Action("FlowerFarm", "Pages")
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Menu End -->