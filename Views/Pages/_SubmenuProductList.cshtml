<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-lg-6">
            <div class="d-flex align-items-center">
                <a href="/product/@item.Handle">
                    <img class="flex-shrink-0 img-fluid rounded border" src="@item.MainImage" alt="@item.Name" style="width: 80px;">
                </a>
                <div class="w-100 d-flex flex-column text-start ps-4">
                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                        <a class="prod-link" href="/product/@item.Handle">@item.Name</a>
                        <span class="text-primary">
                            @item.Price.ToString("N0")₫
                        </span>
                    </h5>
                    <small class="fst-italic">@item.CategoryName</small>
                </div>
            </div>
        </div>
    }
</div>
