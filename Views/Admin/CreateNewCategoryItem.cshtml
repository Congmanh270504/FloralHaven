@model FloralHaven.Models.CATEGORY

@{
    ViewBag.Title = "Create Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string error = ViewBag.Error;
}


@using (Html.BeginForm("CreateNewCategoryItem", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.name,"Name new category", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex gap-4">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @error
                    <button type="submit" value="Create" class="btn border bg-success">Create</button>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index",null,new {@class= "btn btn-default border" })
            </div>
        </div>
    </div>
}

